# Stage 1: Node image for building frontend assets
FROM node:18 as node

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm install

COPY resources/ resources/
COPY vite.config.js ./
COPY public/ public/
RUN npm run build


# Stage 2: PHP + Composer for backend
FROM php:8.2-fpm

# Set working directory
WORKDIR /var/www

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    curl \
    unzip \
    git \
    libzip-dev \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpng-dev && \
    docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd zip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Copy backend app files
COPY . .

# Copy built assets from Node stage
COPY --from=node /app/public ./public
COPY --from=node /app/resources/js ./resources/js

# Install PHP dependencies
RUN composer install --no-dev --optimize-autoloader

# Laravel app config
RUN php artisan config:clear && php artisan route:clear && php artisan view:clear && php artisan optimize

# Expose port for Laravel dev server
EXPOSE 8080

CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8080"]
